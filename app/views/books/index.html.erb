<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'users/user.html.erb', user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @book.each do |book| %>
          <tr>
            <td>
              <p>
                <%= link_to user_path(book.user) do %>
                    <%= image_tag book.user.get_profile_image(100,100) %>
                  <% end %>
                </p>
            </td>
            <td>
              <p><%= link_to book.title, book_path(book.id),style: "color:blue;" %></p>
            </td>
            <td>
              <p><%= book.body %></p>
            </td>
          </tr>
          <% end %>
        </tbody>

      </table>
    </div>

  </div>
</div>