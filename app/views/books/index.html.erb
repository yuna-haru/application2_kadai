<div>
  <div>

    <div>
      <%= render 'users/user.html.erb', user: @user %>
    </div>

    <div>
      <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <% @book.each do |book| %>
            <tb>
              <p><%= image_tag book.user.get_profile_image(100,100) %></p>
            </tb>
            <tb>
              <p><%= link_to book.title, book_path(book.id) %></p>
            </tb>
            <tb>
              <p><%= book.body %></p>
            </tb>
            <% end %>
          </tr>
        </tbody>

      </table>
    </div>

  </div>
</div>

