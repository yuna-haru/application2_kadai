 <div class="container">
   <div class="row">
     <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

       <h1>Editing Book</h1>
       <div>
        <% if @booked.errors.any? %>
          <h3><%= @booked.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @booked.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

        <%= form_with model: @booked do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="opinion">Opinion</label>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Update Book" class="btn btn-success" datr-disable-with="Update Book">
        </div>
          <%= link_to "Show", book_path %> |
          <%= link_to "Back", books_path %>
        <% end %>

      </div>
    </div>
  </div>