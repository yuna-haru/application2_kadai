 <div>
   <div>
     <div>
       <h1>Editing Book</h1>
       <div>
        <% if @booked.errors.any? %>
          <h3><%= @booked.errors.count %> errors prohibited this obj from being saved:</h3>
          <ul>
            <% @booked.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

        <%= form_with model: @booked do |f| %>
        <div>
          <label for="title">Title</label><br>
            <%= f.text_field :title, autofocus:true,  id:"title" %><br>
        </div>
        <div>
          <label for="opinion">Opinion</label><br>
            <%= f.text_area :body, autofocus:true, id:"opinion" %><br>
        </div>
        <div>
          <%= f.submit 'Update Book' %><br>
        </div>
          <%= link_to "Show", book_path %> |
          <%= link_to "Back", books_path %>
        <% end %>
      </div>
    </div>
  </div>