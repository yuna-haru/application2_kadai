<div>
   <%= render 'user' user:@user %>
</div>

  <h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>

</div>

<% @book.each do |book| %>
<div>
  <%= image_tag book.get_image %>
  <p>user image：<%= image_tag 'no_image.jpg' %></p>
  <p>book title：<%= book.title %></p>
  <p>book opinion：<%= book.body %></p>
  <p>user name：<%= book.user.name %></p>
</div>
<% end %>