<div>
  <div>
    <div>
      <h1>User info</h1>
      <div>
        <% if @user.errors.any? %>
          <%= @user.errors.count %>error prohibited this obj from being saved:
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>

      </div>
      <%= form_with model: @user do |f| %>
      <div>
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %><br>
      </div>
      <div>
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder:"ファイルを選択", accept:"image/*" %><br>
      </div>
      <div>
        <label for="inputText">Introduction</label><br>
        <%= f.text_field :introduction, autofocus: true, id:"inputText" %><br>
      </div>
      <div>
        <%= f.submit "Update User" %><br>
      </div>
      <% end %>
    </div>
  </div>
</div>