

      <div>
        <% if @booked.errors.any? %>
          <%= @booked.errors.count %> errors prohibited this obj from being saved:
          <ul>
            <% @booked.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100,100) %><br>
      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>Name</th>
            <th><%= user.name %></th>
          </tr><br>
          <tr>
            <th>introduction</th>
            <th><%= user.introduction %></th>
          </tr>
        </tbody>
      </table>
      <% if user == current_user %>
        <div class="row">
          <%= link_to edit_user_path(user), class:'btn btn-outline-secondary btn-block' do %>
            <i class="fas fa-user-cog"></i>
          <% end %>
        </div>
      <% end %>

       <h2 class="mt-3">New book</h2>

      <%= form_with model: @booked do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
          <%= f.text_field :title %>
        </div>
        <div class="form-group">
          <label for="opinion">Opinion</label><br>
          <%= f.text_area :body %>
        </div>
        <div class="form-group">
          <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
        </div>
      <% end %>

